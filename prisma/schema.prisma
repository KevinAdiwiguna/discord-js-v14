generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guild {
  guild_id   String      @id @unique
  guild_name String
  Minecraft  Minecraft[]
  Reminder   Reminder[]
  Welcome    Welcome?
}

model Minecraft {
  guild_id           String
  server_name        String
  server_address     String
  server_description String?
  server_version     String?
  id                 String  @id @default(uuid())
  guild              Guild   @relation(fields: [guild_id], references: [guild_id])
}

model Reminder {
  reminder_id String    @id @default(uuid())
  guild_id    String
  message_id  String
  is_reminder Boolean
  time        DateTime
  cooldown    BigInt?
  expiry_time DateTime?
  guild       Guild     @relation(fields: [guild_id], references: [guild_id])
  message     Message   @relation(fields: [message_id], references: [message_id])
}

model Welcome {
  guild_id   String  @id
  channel_id String?
  message_id String
  images_url String?
  guild      Guild   @relation(fields: [guild_id], references: [guild_id])
  message    Message @relation(fields: [message_id], references: [message_id])
}

model Message {
  message_id String      @id @default(uuid())
  content    String
  type       MessageType
  Reminder   Reminder[]
  Welcome    Welcome[]
}

enum MessageType {
  WELCOME
  REMINDER
}
